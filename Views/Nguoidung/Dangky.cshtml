
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div style="display: flex; flex-direction: column; align-items: center; margin:100px 0px">
    <h2 style="text-align: center; margin-bottom: 20px;font-size:40px">ĐĂNG KÝ THÀNH VIÊN</h2>
    <table style="margin: 0 auto; border-collapse: collapse;">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height: 40px;">
                <td>Họ tên khách hàng:</td>
                <td>
                    @Html.TextBox("HotenKH")
                    @ViewData["Loi1"]
                </td>
            </tr>
            <tr style="height: 40px;">
                <td>Tên đăng nhập:</td>
                <td>
                    @Html.TextBox("TenDN")
                    @ViewData["Loi2"]
                </td>
            </tr>
            <tr style="height: 40px;">
                <td>Mật khẩu:</td>
                <td>
                    @Html.Password("Matkhau")
                    @ViewData["Loi3"]
                </td>
            </tr>
            <tr style="height: 40px;">
                <td>Mật khẩu nhập lại:</td>
                <td>
                    @Html.Password("Matkhaunhaplai")
                    @ViewData["Loi4"]
                </td>
            </tr>
            <tr style="height: 40px;">
                <td>Điện thoại:</td>
                <td>
                    @Html.TextBox("Dienthoai")
                    @ViewData["Loi6"]
                </td>
            </tr>
            <tr style="height: 40px;">
                <td>Ngày sinh:</td>
                <td>
                    <input type="date" name="Ngaysinh" />
                    @ViewData["Loi7"]
                </td>
            </tr>
            <tr style="height: 40px;">
                <td>Email</td>
                <td>
                    @Html.TextBox("Diachi")
                </td>
            </tr>
            <tr style="height: 40px;">
                <td>Địa chỉ</td>
                <td>
                    @Html.TextBox("Email")
                </td>
            </tr>
            <tr style="height: 40px;">
                <td></td>
                <td>
                    <input type="Submit" value="Đăng ký" />
                </td>
            </tr>
        }
    </table>
</div>


