
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh;">
    <h3 style="text-align: center;">ĐĂNG NHẬP</h3>
    <h4 style="color: red; text-align: center;">@ViewBag.Thongbao</h4>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, null, new { @style = "color:red; text-align:center;" })

        <table style="margin: auto; border-collapse: separate; border-spacing: 10px;">
            <tr style="height: 40px;">
                <td style="text-align: right;">Tên đăng nhập:</td>
                <td>
                    @Html.TextBox("TenDN")
                    <span style="color: red;">@ViewData["Loi1"]</span>
                </td>
            </tr>
            <tr style="height: 40px;">
                <td style="text-align: right;">Mật khẩu:</td>
                <td>
                    @Html.Password("Matkhau")
                    <span style="color: red;">@ViewData["Loi2"]</span>
                </td>
            </tr>
            <tr style="height: 40px;">
                <td></td>
                <td>
                    <input type="Submit" value="Đăng nhập" />
                </td>
            </tr>
        </table>
    }
</div>


